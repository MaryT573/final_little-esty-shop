<%= form_with url: "/merchants/#{@merchant.id}/bulkdiscounts/#{@discount.id}", method: :patch, local: true do |form|%>
  <%= form.label :threshold %>
  <%= form.number_field :threshold, value: @discount.threshold %>
  <%= form.label :discount %>
  <%= form.number_field :discount, :step => "0.01", value: @discount.discount %>
  <%= form.submit "Update Discount" %>
<% end %>
