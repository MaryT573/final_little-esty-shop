<%= form_with url: "/merchants/#{@merchant.id}/bulkdiscounts", method: :post, local: true do |form|%>
  <%= form.label :threshold %>
  <%= form.number_field :threshold %>
  <%= form.label :discount %>
  <%= form.number_field :discount, :step => "0.01" %>
  <%= form.submit "Create Discount" %>
<% end %>
